                    <sys:String>Item</sys:String>
                    <sys:String>Item</sys:String>
                    <sys:String>Item</sys:String>
                    <sys:String>Item</sys:String>
                </ListBox.Items>
                -->
            </ListBox>
        </Grid>
    </Grid>
</Window>
