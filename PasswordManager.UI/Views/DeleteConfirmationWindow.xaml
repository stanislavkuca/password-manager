<Window x:Class="PasswordManager.UI.Views.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.UI.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Are you sure?" Grid.Row="0" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontWeight="Bold" FontSize="20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Click="DeleteConfirmationButton_Click" 
                    Content="Delete" Style="{StaticResource DeleteButtonStyle}" 
                    Height="30" Width="60" Margin="50,5,30,5"/>
            <Button Click="StornoConfirmationButton_Click" 
                    Content="Storno" Style="{StaticResource DefaultButtonStyle}" 
                    Height="30" Width="60" Margin="50,5,20,5"/>
        </StackPanel>
    </Grid>
</Window>
