<Window x:Class="PasswordManager.UI.Views.NewAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.UI.Views"
        mc:Ignorable="d"
        Title="New account window" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New account" HorizontalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="15"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Account name:" Grid.Row="0" Grid.Column="0" Margin="3"/>
            <TextBox x:Name="AccountNameTextBox" Grid.Row="0" Grid.Column="1"/>

            <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" Margin="3"/>
            <TextBox x:Name="AccountUsernameTextBox" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0" Margin="3"/>
            <TextBox x:Name="AccountPasswordTextBox" Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Note:" Grid.Row="3" Grid.Column="0" Margin="3"/>
            <TextBox x:Name="AccountNoteTextBox" Grid.Row="3" Grid.Column="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2">
                <Button Content="Add" Click="AddButton_Click" Width="75" Margin="5,5,50,5"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="75" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
