<Window x:Class="PasswordManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <StackPanel Orientation="Vertical" Width="250" HorizontalAlignment="Left" Background="LightGray">
            <TextBlock Text="Password Manager" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <Button x:Name="button" Content="Button" Width="120" Height="30" Margin="20" />
            <Button x:Name="button2" Content="Button2" Width="120" Height="30" Margin="20" />
            <Button x:Name="button3" Content="Button3" Width="120" Height="30" Margin="20" />
            <Button x:Name="button4" Content="Button4" Width="120" Height="30" Margin="20" />
        </StackPanel>
    </Grid>
</Window>
