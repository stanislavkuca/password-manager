<Window x:Class="PasswordManager.Views.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.Views"
        mc:Ignorable="d"
        Style="{StaticResource DialogWindowStyle}"
        Title="Confirm deletion">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Click="DeleteConfirmationButton_Click" 
                    Content="Delete" Style="{StaticResource DialogButtonOK}" 
                    Background="IndianRed"/>
            <Button Click="CancelButton_Click" 
                    Content="Cancel" Style="{StaticResource DialogButtonCancel}"/>
        </StackPanel>
    </Grid>
</Window>
